
<h1> Product List</h1>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Product ID</th>
            <th>Product Name</th>
          
            <th>Discontinued</th>
            <th>Delete</th>
            <th>Update</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.ProductID</td>
                <td>@product.ProductName</td>
               
                <th>@(product.Discontinued==true?"Yes":"No")</th>
                <td>
                    @Html.ActionLink("Update", "Update", new { ProductID = product.ProductID }, new { @class = "btn btn-primary" })
                </td>
                <td>
                    @Html.ActionLink("Delete", "Delete", new { ProductID = product.ProductID }, new { @class = "btn btn-danger", onclick = "return confirm('Are you sure you wish to delete this?');" })
                </td>
            </tr>
        }

    </tbody>
</table>